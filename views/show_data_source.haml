!!!
%html
  %head
    %title= @data_source_name
    %meta{:name =>  'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %link{:href => '/bootstrap/css/bootstrap.min.css', :rel => 'stylesheet', :media => 'screen'}
    %link{:href=>'/bootstrap/css/bootstrap-theme.min.css', :rel=>'stylesheet', :media=>'screen'}
    %link{:href=>'/bootstrap/css/bootstrap-site-theme.css', :rel=>'stylesheet', :media=>'screen'}
    %link{:href => '/css/common.css', :rel => 'stylesheet', :media => 'screen'}

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container#header
        .navbar-header
          %button.navbar-toggle{'data-target'.to_sym => '.navbar-collapse', 'data-toggle'.to_sym => 'collapse', :type => 'button'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} Ginger
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Pages
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/pages'}My Pages
                %li
                  %a{:href => '/pages'}All Pages
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Forms
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/forms'}My Forms
                %li
                  %a{:href => '/forms'}All Forms
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Data Sources
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/data_sources'}My Data Sources
                %li
                  %a{:href => '/explore'}All Data Sources
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Groups
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/groups'}My Groups
                %li
                  %a{:href => '/groups'}All Groups
            %li{:class=>'dropdown'}
              %a{:href => '#', :class=>'dropdown-toggle', 'data-toggle'.to_sym=>'dropdown'}
                Data Source
                %b{:class=>'caret'}
              %ul{:class=>'dropdown-menu'}
                %li
                  %a{:href=>"#{get_data_source_edit_link(request.url)}"}Edit
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href=>'/help'}Help
            %li
              %a{:href => '/logout'} Logout
    .container
      .row
        .col-md-12
          .well.well-lg
            %h1= @data_source_name
            %h4 Attributes:
            %h5= @data_source[:attributes]

    %script{:src=>'/js/jquery-2.0.3.min.js'}
    %script{:src=>'/bootstrap/js/bootstrap.min.js'}