!!!
%html
  %head
    %title= @data_source[:name]
    %meta{:name =>  'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %link{:href => '/bootstrap/css/bootstrap.min.css', :rel => 'stylesheet', :media => 'screen'}
    %link{:href => '/css/common.css', :rel => 'stylesheet', :media => 'screen'}

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container#header
        .navbar-header
          %button.navbar-toggle{'data-target'.to_sym => '.navbar-collapse', 'data-toggle'.to_sym => 'collapse', :type => 'button'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} Ginger
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => '/'} Home
            %li{:class=>'dropdown'}
              %a{:href => '#', :class=>'dropdown-toggle', 'data-toggle'.to_sym=>'dropdown'}
                Data Source
                %b{:class=>'caret'}
              %ul{:class=>'dropdown-menu'}
                %li
                  %a{:href=>"#{get_data_source_edit_link(request.url)}"}Edit
    .container
      .row
        .col-md-12
          .well.well-lg
            %h1= @data_source_name
            %h4 Attributes:
            %h5= @data_source[param_to_sym(@data_source_name)]

    %script{:src=>'/js/jquery-2.0.3.min.js'}
    %script{:src=>'/bootstrap/js/bootstrap.min.js'}