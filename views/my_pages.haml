!!! 5
%html
  %head
    %meta{:name=>'viewport', :content=>'width=device-width, initial-scale=1.0'}
    %title My Pages
    %link{:href=>'/bootstrap/css/bootstrap.min.css', :rel=>'stylesheet', :media=>'screen'}
    %link{:href=>'/bootstrap/css/bootstrap-theme.min.css', :rel=>'stylesheet', :media=>'screen'}
    %link{:href=>'/bootstrap/css/bootstrap-site-theme.css', :rel=>'stylesheet', :media=>'screen'}
    %link{:href=>'/css/common.css', :rel=>'stylesheet', :media=>'screen'}

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container#header
        .navbar-header
          %button.navbar-toggle{'data-target'.to_sym => '.navbar-collapse', 'data-toggle'.to_sym => 'collapse', :type => 'button'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} Ginger
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Pages
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/pages'}My Pages
                %li
                  %a{:href => '/pages'}All Pages
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Data Sources
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/data_sources'}My Data Sources
                %li
                  %a{:href => '/explore'}All Data Sources
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Groups
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/groups'}My Groups
                %li
                  %a{:href => '/groups'}All Groups
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href=>'/help'}Help
            %li
              %a{:href => '/logout'} Logout

    .container
      %h3
        Pages created by me
      %hr
      %ul
        - @my_created_pages.each do |page|
          %li
            %a{:href => "/page/#{page[:page_id]}"}=page[:title]
      %h3
        Pages shared with me
      %hr
      %ul
        - @my_shared_pages.each do |page|
          %li
            %a{:href => "/page/#{page[:page_id]}"}=page[:title]
      %h3
        Pages shared with my Groups
      %hr

    %script{:src=>'/js/jquery-2.0.3.min.js'}
    %script{:src=>'/bootstrap/js/bootstrap.min.js'}
