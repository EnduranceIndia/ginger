!!!
%html
  %head
    %meta{:name =>  'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title= @page_title
    %link{:href => '/bootstrap/css/bootstrap.min.css', :rel => 'stylesheet', :media => 'screen'}
    %link{:href=>'/bootstrap/css/bootstrap-theme.min.css', :rel=>'stylesheet', :media=>'screen'}
    %link{:href=>'/bootstrap/css/bootstrap-site-theme.css', :rel=>'stylesheet', :media=>'screen'}
    %link{:href => '/css/common.css', :rel => 'stylesheet', :media => 'screen'}

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container#header
        .navbar-header
          %button.navbar-toggle{'data-target'.to_sym => '.navbar-collapse', 'data-toggle'.to_sym => 'collapse', :type => 'button'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} Ginger
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Pages
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/pages'}My Pages
                %li
                  %a{:href => '/pages'}All Pages
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Data Sources
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/data_sources'}My Data Sources
                %li
                  %a{:href => '/explore'}All Data Sources
            %li{:class => 'dropdown'}
              %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle'.to_sym => 'dropdown'}
                Groups
                %b{:class => 'caret'}
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => '/my/groups'}My Groups
                %li
                  %a{:href => '/groups'}All Groupss
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href=>'/help'}Help
            %li
              %a{:href => '/logout'} Logout

    .container
      %form{:action => "/data_source/#{@data_source_name}", :method => 'POST'}
        %p
          %h3 Data Source name
          %input.form-control{:name => 'name', :type => 'text', :value => "#{@data_source_name}", :style => 'width: 100%;', :readonly => 'readonly'}
        %p
          %h3 Attributes
          %textarea.form-control{:name => 'attributes', :style => 'width: 100%; height: 250px;'}= @data_source[param_to_sym(@data_source_name)]
        %input{:type => 'submit', :value => 'Submit', :class=>'btn btn-success'}

    %script{:src=>'/js/jquery-2.0.3.min.js'}
    %script{:src=>'/bootstrap/js/bootstrap.min.js'}