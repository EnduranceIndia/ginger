!!!
%html
  %head
    %meta{:name =>  'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %title= @page_title
    %link{:href => '/bootstrap/css/bootstrap.min.css', :rel => 'stylesheet', :media => 'screen'}
    %link{:href => '/css/common.css', :rel => 'stylesheet', :media => 'screen'}

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container#header
        .navbar-header
          %button.navbar-toggle{'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse', :type => 'button'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '/'} Ginger
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => '/'} Home

    %form{:action => "/data_source/#{@data_source_name}", :method => 'POST'}
      %p
        %h3 Data Source name
        %input.form-control{:name => 'name', :type => 'text', :value => "#{@data_source_name}", :style => 'width: 100%;', :disabled => 'disabled'}
      %p
        %h3 Attributes
        %textarea.form-control{:name => 'attributes', :style => 'width: 100%; height: 250px;'}= @data_source[param_to_sym(@data_source_name)]
      %input{:type => 'submit', :value => 'Submit', :class=>'btn btn-success'}